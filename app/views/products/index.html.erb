
<h1> Kittens </h1>

<div class= "row">
<% @products.each do |kitty| %>
  <div class="col-md-3">
    <div class= "thumbnail">
      <a href="/products/<%= kitty.id %>">
      <p><%= kitty.name %> </p>
      <p><%= kitty.price %> </p>
      <p><%= kitty.description%> </p>
      <div>
         <img src="<%= kitty.image %>" width= "150" hight="150">
        </div>
      </a>
    </div>
</div>
<%end%>
</div>





